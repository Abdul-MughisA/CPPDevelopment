{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ générer le fichier actif",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-pedantic-errors",
                "-Wall",
                "-Weffc++",
                "-Werror",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}
